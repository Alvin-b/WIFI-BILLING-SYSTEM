# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/wifi_billing
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wifi_billing
DB_USER=postgres
DB_PASSWORD=your_password

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_PORT=3001
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# RADIUS Server Configuration
RADIUS_SERVER_HOST=localhost
RADIUS_SERVER_PORT=1812
RADIUS_SECRET=your-radius-secret
RADIUS_ACCOUNTING_PORT=1813

# MikroTik Configuration
MIKROTIK_HOST=192.168.1.1
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your-mikrotik-password
MIKROTIK_API_PORT=8728
MIKROTIK_HOTSPOT_NAME=hotspot1

# Safaricom Daraja API Configuration
DARAJA_CONSUMER_KEY=your-daraja-consumer-key
DARAJA_CONSUMER_SECRET=your-daraja-consumer-secret
DARAJA_BUSINESS_SHORTCODE=174379
DARAJA_PASSKEY=your-daraja-passkey
DARAJA_CALLBACK_URL=https://yourdomain.com/api/payments/daraja/callback
DARAJA_ENVIRONMENT=sandbox

# KCB Buni API Configuration
KCB_BUNI_CLIENT_ID=your-kcb-client-id
KCB_BUNI_CLIENT_SECRET=your-kcb-client-secret
KCB_BUNI_SUBSCRIPTION_KEY=your-subscription-key
KCB_BUNI_CALLBACK_URL=https://yourdomain.com/api/payments/kcb-buni/callback
KCB_BUNI_ENVIRONMENT=sandbox

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Captive Portal Configuration
CAPTIVE_PORTAL_URL=http://localhost:3001
SUCCESS_REDIRECT_URL=http://success.local
FAILURE_REDIRECT_URL=http://failure.local

# Billing Configuration
DEFAULT_CURRENCY=KES
TAX_RATE=0.16
GRACE_PERIOD_HOURS=24